<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
	
<hibernate-mapping> 
	<class name="com.travelportal.model.FlightModel" table="FLIGHT"> 
		<meta attribute="class-description"> 
			This class contains the Flight detail. 
		</meta> 
		
		<id name="flightId" type="string" column="flight_id"> 
			<generator class="assigned"/> 
		</id> 
		<property name="capacity" column="capacity" type="int"/> 
		<property name="provider" column="provider" type="string"/> 
		<property name="flightType" column="flight_type" type="string"/> 
	</class> 
</hibernate-mapping>
<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
	
<hibernate-mapping> 
	<class name="com.travelportal.model.RouteModel" table="ROUTE"> 
		<meta attribute="class-description"> 
			This class contains the Route detail. 
		</meta> 
		
		<id name="routeId" type="string" column="route_id"> 
			<generator class="assigned"/> 
		</id> 
		<property name="source" column="source" type="string"/> 
		<property name="destination" column="destination" type="string"/>
		<property name="via" column="via" type="string" /> 
	</class> 
</hibernate-mapping>